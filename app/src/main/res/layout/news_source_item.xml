<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/news_source_horizontal_margin"
    android:layout_marginEnd="@dimen/news_source_horizontal_margin"
    android:orientation="vertical">


    <TextView
        android:id="@+id/news_source_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/news_source_label_vertical_margin"
        tools:text="BBC" />

    <TextView
        android:id="@+id/news_source_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/news_source_label_vertical_margin"
        tools:text="BBC Headlines. News 24/7" />

    <TextView
        android:id="@+id/news_source_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/news_source_label_vertical_margin"
        android:layout_marginBottom="@dimen/news_source_label_vertical_margin"
        android:autoLink="web"
        tools:text="bbc.com" />

</LinearLayout>